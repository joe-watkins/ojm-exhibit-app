        id        = "com.bryanpotterdesign.ojm-exhibit"
        version   = "1.0.0">

    <name>OJM - Exhibit App</name>

    <description>
        A little app for an upcoming exhibit.
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        PhoneGap Team
    </author>

    <preference name="phonegap-version" value="3.0.0" /> 

    <access origin="*" />
    <content src="http://illuminatedletters.net/exhibit/" />

    
    <!-- icons -->
